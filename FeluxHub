header.Size = UDim2.new(1, 0, 0, 100)
header.BackgroundColor3 = FELUX_COLORS.Dark
header.BorderSizePixel = 0

local headerCorner = Instance.new("UICorner")
headerCorner.CornerRadius = UDim.new(0, 12)
headerCorner.Parent = header

-- Logo container
local logoContainer = Instance.new("Frame")
logoContainer.Name = "LogoContainer"
logoContainer.Size = UDim2.new(0, 80, 0, 80)
logoContainer.Position = UDim2.new(0.5, -40, 0, 10)
logoContainer.BackgroundTransparency = 1

-- Logo Felux (F dalam lingkaran)
local logoCircle = Instance.new("Frame")
logoCircle.Name = "LogoCircle"
logoCircle.Size = UDim2.new(1, 0, 1, 0)
logoCircle.BackgroundColor3 = FELUX_COLORS.Primary
logoCircle.BorderSizePixel = 0

local circleCorner = Instance.new("UICorner")
circleCorner.CornerRadius = UDim.new(1, 0)
circleCorner.Parent = logoCircle

-- Huruf F di tengah logo
local letterF = Instance.new("TextLabel")
letterF.Name = "LetterF"
letterF.Size = UDim2.new(1, 0, 1, 0)
letterF.Text = "F"
letterF.Font = Enum.Font.GothamBold
letterF.TextSize = 48
letterF.TextColor3 = Color3.new(1, 1, 1)
letterF.BackgroundTransparency = 1
letterF.TextStrokeTransparency = 0.5
letterF.TextStrokeColor3 = FELUX_COLORS.Primary

-- Nama Felux
local title = Instance.new("TextLabel")
title.Name = "Title"
title.Size = UDim2.new(1, 0, 0, 40)
title.Position = UDim2.new(0, 0, 0, 90)
title.Text = "FELUX"
