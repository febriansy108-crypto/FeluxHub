-- Susun hierarki
logoCircle.Parent = logoContainer
letterF.Parent = logoCircle
logoContainer.Parent = header
title.Parent = header
subtitle.Parent = header
header.Parent = mainFrame

buttonContainer.Parent = mainFrame

status.Parent = footer
statusText.Parent = footer
footerText.Parent = footer
footer.Parent = mainFrame

mainFrame.Parent = screenGui

-- Toggle UI dengan F9
local uiVisible = true

UserInputService.InputBegan:Connect(function(input, gameProcessed)
	if not gameProcessed then
		if input.KeyCode == Enum.KeyCode.F9 then
			uiVisible = not uiVisible
			
			local tweenInfo = TweenInfo.new(0.3, Enum.EasingStyle.Quad, Enum.EasingDirection.Out)
			
			if uiVisible then
				TweenService:Create(mainFrame, tweenInfo, {
					Position = UDim2.new(0.5, -200, 0.5, -250)
				}):Play()
			else
				TweenService:Create(mainFrame, tweenInfo, {
					Position = UDim2.new(0.5, -200, 1, 50)
				}):Play()
			end
		end
	end
end)

-- Animasi masuk saat pertama kali load
mainFrame.Position = UDim2.new(0.5, -200, 1, 50)
TweenService:Create(mainFrame, TweenInfo.new(0.5, Enum.EasingStyle.Back, Enum.EasingDirection.Out, 0, false, 0.5), {
	Position = UDim2.new(0.5, -200, 0.5, -250)
}):Play()

-- Fungsi untuk tombol (contoh)
local buttonFunctions = {
	Aimbot = function()
		print("Aimbot activated!")
		-- Tambahkan kode aimbot di sini
	end,
	
	Wallhack = function() 
		print("Wallhack activated!")
		-- Tambahkan kode wallhack di sini
	end,
	
	ESP = function()
		print("ESP activated!")
		-- Tambahkan kode ESP di sini
	end,
	
	Teleport = function()
		print("Teleport tools loaded!")
		-- Tambahkan kode teleport di sini
	end,
	
	AutoFarm = function()
		print("Auto Farm started!")
		-- Tambahkan kode autofarm di sini
	end,
	
	Misc = function()
		print("Miscellaneous features loaded!")
		-- Tambahkan kode miscellaneous di sini
	end
}

-- Connect fungsi ke tombol
for _, buttonName in ipairs(buttons) do
	local button = buttonContainer:FindFirstChild(buttonName[1])
	if button then
		button.MouseButton1Click:Connect(function()
			local func = buttonFunctions[buttonName[1]]
			if func then
				func()
				
				-- Feedback visual
				TweenService:Create(button, TweenInfo.new(0.1), {
					BackgroundColor3 = FELUX_COLORS.Accent
				}):Play()
				
				wait(0.1)
				
				TweenService:Create(button, TweenInfo.new(0.3), {
					BackgroundColor3 = FELUX_COLORS.Dark
				}):Play()
			end
		end)
	end
end

-- Parent ke PlayerGui
screenGui.Parent = playerGui

print("Felux UI loaded successfully!")
