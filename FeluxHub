subtitle.Name = "Subtitle"
subtitle.Size = UDim2.new(1, 0, 0, 20)
subtitle.Position = UDim2.new(0, 0, 0, 125)
subtitle.Text = "Premium Script Hub"
subtitle.Font = Enum.Font.GothamMedium
subtitle.TextSize = 16
subtitle.TextColor3 = FELUX_COLORS.Primary
subtitle.BackgroundTransparency = 1

-- Container untuk tombol
local buttonContainer = Instance.new("Frame")
buttonContainer.Name = "ButtonContainer"
buttonContainer.Size = UDim2.new(1, -40, 0, 300)
buttonContainer.Position = UDim2.new(0, 20, 0, 160)
buttonContainer.BackgroundTransparency = 1

-- Fungsi buat tombol
function createButton(buttonName, buttonText, positionY)
	local button = Instance.new("TextButton")
	button.Name = buttonName
	button.Size = UDim2.new(1, 0, 0, 50)
	button.Position = UDim2.new(0, 0, 0, positionY)
	button.Text = buttonText
	button.Font = Enum.Font.GothamSemibold
	button.TextSize = 18
	button.TextColor3 = FELUX_COLORS.Text
	button.BackgroundColor3 = FELUX_COLORS.Dark
	button.AutoButtonColor = false
	button.BorderSizePixel = 0
	
	local buttonCorner = Instance.new("UICorner")
	buttonCorner.CornerRadius = UDim.new(0, 8)
	buttonCorner.Parent = button
	
	local buttonPadding = Instance.new("UIPadding")
	buttonPadding.PaddingLeft = UDim.new(0, 15)
	buttonPadding.Parent = button
	
	-- Hover effect
	button.MouseEnter:Connect(function()
		TweenService:Create(button, TweenInfo.new(0.2), {
			BackgroundColor3 = FELUX_COLORS.Primary,
			TextColor3 = Color3.new(1, 1, 1)
		}):Play()
	end)
	
	button.MouseLeave:Connect(function()
		TweenService:Create(button, TweenInfo.new(0.2), {
			BackgroundColor3 = FELUX_COLORS.Dark,
			TextColor3 = FELUX_COLORS.Text
		}):Play()
	end)
	
	-- Click effect
	button.MouseButton1Down:Connect(function()
		TweenService:Create(button, TweenInfo.new(0.1), {
			BackgroundTransparency = 0.3
		}):Play()
	end)
	
	button.MouseButton1Up:Connect(function()
		TweenService:Create(button, TweenInfo.new(0.1), {
			BackgroundTransparency = 0
		}):Play()
	end)
	
	return button
end

-- Buat tombol-tombol
local buttons = {
	{"Aimbot", "AIMBOT"},
	{"Wallhack", "WALLHACK"},
	{"ESP", "ESP & VISUALS"},
	{"Teleport", "TELEPORT TOOLS"},
	{"AutoFarm", "AUTO FARM"},
	{"Misc", "MISCELLANEOUS"}
}

local buttonHeight = 0
for i, buttonInfo in ipairs(buttons) do
	local button = createButton(buttonInfo[1], buttonInfo[2], buttonHeight)
	button.Parent = buttonContainer
	buttonHeight = buttonHeight + 60
end

-- Footer
local footer = Instance.new("Frame")
footer.Name = "Footer"
footer.Size = UDim2.new(1, 0, 0, 40)
footer.Position = UDim2.new(0, 0, 1, -40)
footer.BackgroundColor3 = FELUX_COLORS.Dark
footer.BorderSizePixel = 0

local footerText = Instance.new("TextLabel")
footerText.Name = "FooterText"
footerText.Size = UDim2.new(1, 0, 1, 0)
footerText.Text = "v1.0 | Press F9 to toggle"
footerText.Font = Enum.Font.Gotham
footerText.TextSize = 14
footerText.TextColor3 = Color3.fromRGB(150, 150, 150)
footerText.BackgroundTransparency = 1

-- Status indicator
local status = Instance.new("Frame")
status.Name = "Status"
status.Size = UDim2.new(0, 10, 0, 10)
status.Position = UDim2.new(0, 20, 0.5, -5)
status.BackgroundColor3 = Color3.fromRGB(0, 255, 0)
status.BorderSizePixel = 0

local statusCorner = Instance.new("UICorner")
statusCorner.CornerRadius = UDim.new(1, 0)
statusCorner.Parent = status

local statusText = Instance.new("TextLabel")
statusText.Name = "StatusText"
statusText.Size = UDim2.new(1, -40, 1, 0)
statusText.Position = UDim2.new(0, 35, 0, 0)
statusText.Text = "Script Loaded"
statusText.Font = Enum.Font.GothamMedium
statusText.TextSize = 12
statusText.TextColor3 = Color3.fromRGB(200, 200, 200)
statusText.BackgroundTransparency = 1
